{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/sudoku/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nxext/vite:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/sudoku",
        "frameworkConfigFile": "@nxext/solid/plugins/vite"
      },
      "configurations": {
        "production": {}
      }
    },
    "move-vercel": {
      "dependsOn": ["build"],
      "executor": "nx:run-commands",
      "options": {
        "command": "cp apps/sudoku/vercel.json apps/sudoku/.vercel dist/apps/sudoku -a"
      }
    },
    "deploy": {
      "dependsOn": ["move-vercel"],
      "executor": "nx:run-commands",
      "options": {
        "command": "cd dist/apps/sudoku && yarn vercel --token \"$VERCEL_TOKEN\" --yes --prod"
      }
    },
    "serve": {
      "executor": "@nxext/vite:dev",
      "options": {
        "outputPath": "dist/apps/sudoku",
        "frameworkConfigFile": "@nxext/solid/plugins/vite"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/sudoku/**/*.{ts,spec.ts,tsx}"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/apps/sudoku"],
      "options": {
        "jestConfig": "apps/sudoku/jest.config.ts",
        "passWithNoTests": true
      }
    }
  }
}
