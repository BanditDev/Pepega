{
  "name": "pepega",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/pepega",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nrwl/next:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "root": "apps/pepega",
        "outputPath": "dist/apps/pepega"
      },
      "configurations": {
        "development": {
          "outputPath": "apps/pepega"
        },
        "production": {}
      },
      "dependsOn": ["generate"]
    },
    "serve": {
      "executor": "@nrwl/next:server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "pepega:build",
        "dev": true
      },
      "configurations": {
        "development": {
          "buildTarget": "pepega:build:development",
          "dev": true
        },
        "production": {
          "buildTarget": "pepega:build:production",
          "dev": false
        }
      }
    },
    "export": {
      "executor": "@nrwl/next:export",
      "options": {
        "buildTarget": "pepega:build:production"
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/apps/pepega"],
      "options": {
        "jestConfig": "apps/pepega/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/pepega/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "generate": {
      "executor": "nx:run-commands",
      "outputs": [],
      "options": {
        "command": "graphql-codegen --config ./apps/pepega/codegen.yml"
      }
    },
    "docker": {
      "executor": "@nx-tools/nx-container:build",
      "options": {
        "push": true,
        "metadata": {
          "images": ["ghcr.io/sygeman/dream/pepega-client"],
          "tags": ["latest", "type=sha,prefix="]
        }
      },
      "dependsOn": ["build"]
    },
    "deploy": {
      "executor": "@dream/rancher-deploy:build",
      "options": {
        "project": "pepega",
        "app": "client"
      },
      "dependsOn": ["docker"]
    }
  },
  "tags": []
}
