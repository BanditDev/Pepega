{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/dream",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nrwl/next:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "root": "apps/dream",
        "outputPath": "dist/apps/dream"
      },
      "configurations": {
        "production": {},
        "development": {
          "outputPath": "apps/dream"
        }
      }
    },
    "serve": {
      "executor": "@nrwl/next:server",
      "options": {
        "buildTarget": "dream:build",
        "dev": true
      },
      "configurations": {
        "production": {
          "buildTarget": "dream:build:production",
          "dev": false
        },
        "development": {
          "buildTarget": "dream:build:development",
          "dev": true
        }
      },
      "defaultConfiguration": "development"
    },
    "export": {
      "executor": "@nrwl/next:export",
      "options": {
        "buildTarget": "dream:build:production"
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/apps/dream"],
      "options": {
        "jestConfig": "apps/dream/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/dream/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "docker": {
      "executor": "@nx-tools/nx-docker:build",
      "options": {
        "push": true,
        "metadata": {
          "images": ["ghcr.io/sygeman/dream/dream-client"],
          "tags": ["latest", "type=sha,prefix="]
        }
      },
      "dependsOn": ["build"]
    },
    "deploy": {
      "dependsOn": ["build"],
      "executor": "nx:run-commands",
      "options": {
        "command": "cd dist/apps/dream && yarn vercel --token \"$VERCEL_TOKEN\" --yes --prod"
      }
    }
  },
  "tags": []
}
