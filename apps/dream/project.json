{
  "name": "dream",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/dream/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nxext/vite:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/dream",
        "frameworkConfigFile": "@nxext/solid/plugins/vite"
      },
      "configurations": {
        "production": {}
      }
    },
    "serve": {
      "executor": "@nxext/vite:dev",
      "options": {
        "outputPath": "dist/apps/dream",
        "frameworkConfigFile": "@nxext/solid/plugins/vite"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/dream/**/*.{ts,spec.ts,tsx}"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/apps/dream"],
      "options": {
        "jestConfig": "apps/dream/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "move-vercel": {
      "dependsOn": ["build"],
      "executor": "nx:run-commands",
      "options": {
        "command": "cp apps/dream/vercel.json apps/dream/.vercel dist/apps/dream -a"
      }
    },
    "deploy": {
      "dependsOn": ["move-vercel"],
      "executor": "nx:run-commands",
      "options": {
        "command": "cd dist/apps/dream && yarn vercel --token \"$VERCEL_TOKEN\" --yes --prod"
      }
    }
  }
}
