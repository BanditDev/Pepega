{
  "name": "mono-api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/mono-api/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "target": "node",
        "compiler": "tsc",
        "outputPath": "dist/apps/mono-api",
        "main": "apps/mono-api/src/main.ts",
        "tsConfig": "apps/mono-api/tsconfig.app.json",
        "assets": ["apps/mono-api/src/assets"],
        "isolatedConfig": true,
        "webpackConfig": "apps/mono-api/webpack.config.js",
        "generatePackageJson": true
      },
      "configurations": {
        "development": {},
        "production": {}
      },
      "dependsOn": ["generate"]
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "mono-api:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "mono-api:build:development"
        },
        "production": {
          "buildTarget": "mono-api:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/mono-api/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/mono-api/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "generate": {
      "executor": "nx:run-commands",
      "outputs": [],
      "options": {
        "command": "prisma generate"
      }
    },
    "dbpush": {
      "executor": "nx:run-commands",
      "outputs": [],
      "options": {
        "command": "prisma db push"
      }
    },
    "studio": {
      "executor": "nx:run-commands",
      "outputs": [],
      "options": {
        "command": "prisma studio"
      }
    },
    "docker": {
      "executor": "@nx-tools/nx-container:build",
      "options": {
        "push": true,
        "metadata": {
          "images": ["ghcr.io/sygeman/dream/mono-api"],
          "tags": ["latest", "type=sha,prefix="]
        }
      },
      "dependsOn": ["build"]
    }
  },
  "tags": []
}
