{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/rancher-deploy/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/rancher-deploy",
        "main": "libs/rancher-deploy/src/index.ts",
        "tsConfig": "libs/rancher-deploy/tsconfig.lib.json",
        "assets": [
          "libs/rancher-deploy/*.md",
          {
            "input": "./libs/rancher-deploy/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./libs/rancher-deploy/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./libs/rancher-deploy",
            "glob": "generators.json",
            "output": "."
          },
          {
            "input": "./libs/rancher-deploy",
            "glob": "executors.json",
            "output": "."
          }
        ]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "libs/rancher-deploy/**/*.ts",
          "libs/rancher-deploy/generators.json",
          "libs/rancher-deploy/executors.json",
          "libs/rancher-deploy/package.json"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/libs/rancher-deploy"],
      "options": {
        "jestConfig": "libs/rancher-deploy/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
